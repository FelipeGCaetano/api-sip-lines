enum Status {
  IN_PROGRESS
  OPEN
  COMPLETE
  REFUSED
  WAITING_SIGNATURE
  WAITING_TIP
  FAILED_TO_SEND_TERM
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  name        String
  ixcId       Int
  username    String        @unique
  password    String
  Portability Portability[]

  @@map("users")
}

model Client {
  id            String        @id @default(uuid())
  clientId      String
  name          String
  email         String
  cpf           String        @unique
  address       String
  Portabilities Portability[]

  @@map("clients")
}

model Portability {
  id          String    @id @default(uuid())
  id_os       String    @unique
  client      Client?   @relation(fields: [client_id], references: [id])
  client_id   String?
  signed      Boolean   @default(false)
  signed_at   DateTime?
  number      String[]
  operator    String?
  status      Status    @default(OPEN)
  assignee    User?     @relation(fields: [assignee_id], references: [id])
  assignee_id String?
  created_at  DateTime  @default(now())

  @@map("portabilities")
}
